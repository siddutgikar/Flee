<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorYellow"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:src="@drawable/categories" />

        <TextView
            android:id="@+id/textViewSelect"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="@string/select_category"
            android:textColor="#B3000000"
            android:textSize="22sp" />

        <!--   Customized Checkboxes  -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/toggleCustomized11"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/settings_checkbox_11"
                    android:button="@null"
                    android:checked="false"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toggleCustomized12"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/settings_checkbox_12"
                    android:button="@null"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toggleCustomized13"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/settings_checkbox_13"
                    android:button="@null"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toggleCustomized14"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/settings_checkbox_14"
                    android:button="@null"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toggleCustomized15"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/settings_checkbox_15"
                    android:button="@null"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toggleCustomized16"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/settings_checkbox_16"
                    android:button="@null"
                    android:textOff=""
                    android:textOn="" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/toggleCustomized21"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/settings_checkbox_21"
                    android:button="@null"
                    android:checked="false"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toggleCustomized22"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/settings_checkbox_22"
                    android:button="@null"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toggleCustomized23"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/settings_checkbox_23"
                    android:button="@null"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toggleCustomized24"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/settings_checkbox_24"
                    android:button="@null"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toggleCustomized25"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/settings_checkbox_25"
                    android:button="@null"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toggleCustomized26"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/settings_checkbox_26"
                    android:button="@null"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/toggleCustomized31"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/settings_checkbox_31"
                    android:button="@null"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toggleCustomized32"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/settings_checkbox_32"
                    android:button="@null"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toggleCustomized33"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/settings_checkbox_33"
                    android:button="@null"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toggleCustomized34"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/settings_checkbox_34"
                    android:button="@null"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toggleCustomized35"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/settings_checkbox_35"
                    android:button="@null"
                    android:textOff=""
                    android:textOn="" />

                <ToggleButton
                    android:id="@+id/toggleCustomized36"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/settings_checkbox_36"
                    android:button="@null"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/location"
                    android:textColor="#B3000000"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/editTextLocation"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="@string/distance"
                    android:textColor="#B3000000"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/textViewSeekbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:textColor="#B3000000"
                    android:textSize="16sp"/>

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="500dp"
            android:paddingRight="500dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/finishButtonCategory"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/share_button_selector4"
                android:focusableInTouchMode="false"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="@string/finish"
                android:textColor="#FFFFFF" />
        </LinearLayout>


    </LinearLayout>


</ScrollView>
