<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingLeft="@dimen/activity_login_padding"
    android:paddingRight="@dimen/activity_login_padding"
    android:background="#E37245">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:gravity="center">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_marginBottom="10dp"
            android:id="@+id/imgMap"
            android:layout_width="155dp"
            android:layout_height="73dp"
            android:src="@drawable/flee_small"
             />


        <EditText
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userText"

            android:hint="Email or Username"
            android:gravity="center_horizontal"
            android:background="@drawable/share_button_selector5"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>

        <EditText
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordText"

            android:hint="Password"
            android:gravity="center_horizontal"
            android:background="@drawable/share_button_selector5"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>

        <Button
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:id="@+id/loginButton"

            android:background="@drawable/share_button_selector3"
            android:focusableInTouchMode="false"
            android:textColor="#FFFFFF"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"/>

        <Button
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:id="@+id/signupButton"

            android:background="@drawable/share_button_selector"
            android:textColor="#FFFFFF"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log in with Google"
            android:id="@+id/apiLoginButton"

            android:background="@drawable/share_button_selector2"
            android:textColor="#FFFFFF"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"/>

    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot your password?"
            android:id="@+id/forgotPassword"

            android:textColor="#FFFFFF"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:background="@android:color/transparent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms and Agreement"
            android:id="@+id/termsConditions"
            android:textColor="#FFFFFF"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:background="@android:color/transparent" />

    </LinearLayout>
</LinearLayout>

